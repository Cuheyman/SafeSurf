{
    "manifest_version": 3,
    "name": "SafeSurf",
    "description": "Scanning threats",
    "version": "1.0",
    "permissions": [
        "tabs", "activeTab", "<all_urls>", "notifications", "scripting"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "logo.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["js/warning.js", "safePopup.html", "logo.png"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  
